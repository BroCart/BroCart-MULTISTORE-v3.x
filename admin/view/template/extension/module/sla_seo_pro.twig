                      <input type="radio" name="module_sla_seo_pro_include_path" value="1" checked="checked"/>
                      {{ text_yes }} 
                    </label>
                    <label class="radio-inline">
                      <input type="radio" name="module_sla_seo_pro_include_path" value="0"/>
                      {{ text_no }} 
                    </label>
                    {% else %} 
                    <label class="radio-inline">
                      <input type="radio" name="module_sla_seo_pro_include_path" value="1"/>
