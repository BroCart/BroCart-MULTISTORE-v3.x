				  {% for language in languages %}
                    <div class="input-group">
                      <span class="input-group-addon"><img src="language/{{ language.code }}/{{ language.code }}.png" alt="{{ language.name }}" /></span>
                      <input name="module_sla_seo_pro_lang_prefix[{{ language.language_id }}]" class="form-control" value="{{ module_sla_seo_pro_lang_prefix[language.language_id] is defined?module_sla_seo_pro_lang_prefix[language.language_id]:language.code }}" />
